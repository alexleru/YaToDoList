<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="YaToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/back_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="ButtonDelete" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="ButtonSave" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/red</item>
    </style>
</resources>